                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Experience}" FontAttributes="Bold"></Label>
                        <Button Grid.Row="0" Grid.Column="1" x:Name="btnDeleteHistory" ImageSource="delete.png" Clicked="btnDeleteHistory_Clicked" 
                                BackgroundColor="Transparent" TextColor="Transparent">
                        </Button>
                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding ExperienceDate, Converter={StaticResource DatetimeConverter}}" FontSize="10"></Label>
                    </Grid>
                </ViewCell>
                -->
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>